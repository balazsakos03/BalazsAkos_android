<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ProgressHabitPlanner" parent="Theme.Material3.Light.NoActionBar">

        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/backgroundLight</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/font_family</item>
        <item name="fontFamily">@font/font_family</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>


    <!-- Toolbar -->
    <style name="CustomToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <!-- Button -->
    <style name="TurquoiseButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="MyMaterialDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTheme">@style/MyMaterialDialogTheme</item>
    </style>

    <style name="MyMaterialDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/DialogDeleteButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogCancelButton</item>
    </style>

    <!-- CANCEL gomb -->
    <style name="DialogCancelButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!-- DELETE gomb (PIROS) -->
    <style name="DialogDeleteButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/red</item>
    </style>


</resources>
