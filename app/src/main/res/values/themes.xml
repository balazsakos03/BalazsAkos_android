<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ProgressHabitPlanner" parent="Theme.Material3.Light.NoActionBar">

        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/backgroundLight</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/font_family</item>
        <item name="fontFamily">@font/font_family</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/CustomToolbar</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/TurquoiseButton</item>

        <!-- (CardView style törölve – nem támogatott!) -->
    </style>


    <!-- Toolbar -->
    <style name="CustomToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <!-- Button -->
    <style name="TurquoiseButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">20dp</item>
    </style>

</resources>
