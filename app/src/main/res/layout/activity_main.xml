<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
    android:id="@+id/nav_host_fragment"
    android:name="androidx.navigation.fragment.NavHostFragment"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:defaultNavHost="true"
    app:navGraph="@navigation/navigation_resource"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTop0f="@id/bottom_nav"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEnd0f="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="338dp"
            android:layout_height="112dp"
            app:menu="@menu/menu_resource"
            app:layout_constraintBottom_toBottom0f="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEnd0f="parent" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="620dp" android:layout_marginStart="36dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>