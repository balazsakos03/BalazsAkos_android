<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@color/backgroundLight">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Schedule"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="16dp"/>

        <EditText
                android:id="@+id/etHabitId"
                android:hint="Habit ID"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

        <EditText
                android:id="@+id/etDate"
                android:hint="Date (YYYY-MM-DDTHH:MM)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

        <EditText
                android:id="@+id/etStart"
                android:hint="Start time (YYYY-MM-DDTHH:MM)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

        <EditText
                android:id="@+id/etEnd"
                android:hint="End time (YYYY-MM-DDTHH:MM)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

        <EditText
                android:id="@+id/etDuration"
                android:hint="Duration minutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

        <EditText
                android:id="@+id/etNotes"
                android:hint="Notes"
                android:minLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

        <Button
                android:id="@+id/btnCustomSchedule"
                style="@style/TurquoiseButton"
                android:text="Create Custom Schedule"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btnRecurringSchedule"
                style="@style/TurquoiseButton"
                android:text="Create Recurring Schedule"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btnWeekdaySchedule"
                style="@style/TurquoiseButton"
                android:text="Create Weekday Schedule"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
